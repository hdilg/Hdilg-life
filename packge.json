<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sicklv – منصة الخدمات الطبية</title>
  <link rel="icon" href="logoo.ico" type="image/x-icon" />
  <style>
    :root {
      --primary-color: #2c70b9;
      --text-primary: #333;
      --background-gray: #f5f5f5;
      --error-color: #e74c3c;
      --success-color: #2ecc71;
    }

    body {
      margin: 0;
      padding: 0;
      font-family: Arial, sans-serif;
      background: #fff;
      color: var(--text-primary);
      text-align: center;
      min-height: 100vh;
    }

    .top-image,
    .bottom-image {
      width: 100%;
      height: auto;
    }

    .container {
      width: 80%;
      max-width: 500px;
      margin: 30px auto;
    }

    .form-container {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    .form-group {
      width: 100%;
      margin-bottom: 10px;
    }

    .form-control {
      width: 100%;
      padding: 8px 12px;
      font-size: 0.8rem;
      border: 1px solid var(--primary-color);
      border-radius: 5px;
      text-align: right;
      background: #fff;
      color: #333;
      box-sizing: border-box;
    }

    .form-control:focus {
      outline: none;
      border-color: var(--primary-color);
      box-shadow: 0 0 0 2px rgba(44,112,185,0.2);
    }

    .btn-group,
    .page2-btn-group {
      display: flex;
      flex-direction: column;
      gap: 8px;
      width: 100%;
      max-width: 178px;
      margin: 20px auto 0;
    }

    .btn,
    .page2-btn {
      padding: 6.8px;
      font-size: 0.7rem;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-weight: bold;
      background: var(--primary-color);
      color: #fff;
      width: 100%;
    }

    .btn:hover,
    .page2-btn:hover {
      opacity: 0.9;
    }

    .btn:active,
    .page2-btn:active {
      transform: scale(0.98);
    }

    /* صفحة عرض النتائج - توسيط المحتوى */
    #page2 {
      display: none;
      min-height: 70vh;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
    }

    /* صندوق نتائج الاستعلام - موحد وخلفية */
    #detailsContainer {
      width: 90%;
      max-width: 500px;
      margin: 0 auto;
      background: var(--background-gray);
      border-radius: 8px;
      padding: 24px;
      text-align: center;
      box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

    .leave-details {
      background: var(--background-gray);
      border: 1px solid var(--primary-color);
      border-radius: 6px;
      padding: 18px;
      box-shadow: none;
    }

    .detail-group {
      margin-bottom: 14px;
      text-align: center;
    }

    .service-id,
    .id-number {
      background: var(--background-gray);
      color: var(--text-primary);
      font-size: 1rem;
      font-weight: bold;
      margin-bottom: 16px;
    }

    .detail-label {
      display: block;
      text-align: center;
      margin: 4px 0;
      font-size: 0.85rem;
      font-weight: bold;
      color: var(--text-primary);
    }

    .detail-value {
      display: block;
      text-align: center;
      margin: 4px 0;
      font-size: 0.85rem;
    }

    .loading {
      color: var(--primary-color);
      font-weight: bold;
      padding: 20px;
    }

    .error {
      color: var(--error-color);
      font-weight: bold;
      padding: 20px;
    }

    @media (max-width: 768px) {
      .container {
        width: 95%;
      }
    }

    @media (max-width: 480px) {
      .container {
        width: 98%;
      }
    }

    @media (prefers-color-scheme: dark) {
      :root {
        --primary-color: #4a89dc;
        --text-primary: #f5f5f5;
        --background-gray: #222;
        --error-color: #ff6b6b;
        --success-color: #1dd1a1;
      }
      body {
        background: #121212;
        color: var(--text-primary);
      }
    }

    @media print {
      .top-image,
      .bottom-image {
        display: none;
      }
    }
  </style>
</head>
<body>
  <img src="uup.jpg" alt="شعار المنصة" class="top-image" draggable="true" />

  <!-- صفحة الاستعلام -->
  <div class="container" id="page1">
    <form id="inquiryForm" class="form-container" autocomplete="off" spellcheck="false">
      <div class="form-group">
        <input
          type="text"
          id="serviceCode"
          class="form-control"
          placeholder="رمز الخدمة"
          required
          minlength="8"
          maxlength="20"
          pattern="[A-Za-z0-9]{8,20}"
        />
      </div>
      <div class="form-group">
        <input
          type="text"
          id="idNumber"
          class="form-control"
          placeholder="رقم الهوية / الإقامة"
          required
          minlength="10"
          maxlength="10"
          pattern="[0-9]{10}"
        />
      </div>
      <div class="btn-group">
        <button type="submit" class="btn">استعلام</button>
        <button type="button" class="btn" id="resetBtn">رجوع للاستعلامات</button>
      </div>
    </form>
  </div>

  <!-- صفحة عرض النتائج -->
  <div class="container" id="page2">
    <div id="detailsContainer"></div>
    <div class="page2-btn-group">
      <button type="button" id="newInquiry" class="page2-btn">استعلام جديد</button>
      <button type="button" id="returnForm" class="page2-btn">رجوع</button>
    </div>
  </div>

  <img src="ddown.jpg" alt="الشعار السفلي" class="bottom-image" draggable="true" />

  <script>
    "use strict";

    // رابط الـ API
    const API_BASE_URL = "https://hdilg.onrender.com";

    const serviceCodeInput = document.getElementById("serviceCode");
    const idNumberInput    = document.getElementById("idNumber");
    const inquiryForm      = document.getElementById("inquiryForm");
    const page1            = document.getElementById("page1");
    const page2            = document.getElementById("page2");
    const details          = document.getElementById("detailsContainer");
    const resetBtn         = document.getElementById("resetBtn");
    const newInquiryBtn    = document.getElementById("newInquiry");
    const returnFormBtn    = document.getElementById("returnForm");

    function escapeHTML(str) {
      if (!str) return '';
      return String(str).replace(/[&<>"'\/]/g, c =>
        ({ "&":"&amp;","<":"&lt;",">":"&gt;","\"":"&quot;","'":"&#x27;","/":"&#x2F;" })[c]
      );
    }

    function resetForm() {
      inquiryForm.reset();
      page2.style.display = "none";
      page1.style.display = "block";
      details.innerHTML = '';
    }

    function showLoading() {
      details.innerHTML = '<div class="loading">جاري التحميل...</div>';
      page1.style.display = "none";
      page2.style.display = "flex";
    }

    function showError(message) {
      details.innerHTML = `<div class="error">${escapeHTML(message)}</div>`;
    }

    function displayLeaveData(record) {
      details.innerHTML = `
        <div class="service-id">${escapeHTML(record.serviceCode)}</div>
        <div class="id-number">${escapeHTML(record.idNumber)}</div>
        <div class="leave-details">
          <div class="detail-group">
            <div class="detail-label">الاسم:</div>
            <div class="detail-value">${escapeHTML(record.name)}</div>
          </div>
          <div class="detail-group">
            <div class="detail-label">تاريخ إصدار تقرير الإجازة:</div>
            <div class="detail-value">${escapeHTML(record.reportDate)}</div>
          </div>
          <div class="detail-group">
            <div class="detail-label">تبدأ من:</div>
            <div class="detail-value">${escapeHTML(record.startDate)}</div>
          </div>
          <div class="detail-group">
            <div class="detail-label">وحتى:</div>
            <div class="detail-value">${escapeHTML(record.endDate)}</div>
          </div>
          <div class="detail-group">
            <div class="detail-label">المدة بالأيام:</div>
            <div class="detail-value">${escapeHTML(record.days)}</div>
          </div>
          <div class="detail-group">
            <div class="detail-label">اسم الطبيب:</div>
            <div class="detail-value">${escapeHTML(record.doctorName)}</div>
          </div>
          <div class="detail-group">
            <div class="detail-label">المسمى الوظيفي:</div>
            <div class="detail-value">${escapeHTML(record.jobTitle)}</div>
          </div>
        </div>`;
    }

    inquiryForm.addEventListener("submit", function(e) {
      e.preventDefault();
      const serviceCode = serviceCodeInput.value.trim();
      const idNumber    = idNumberInput.value.trim();

      showLoading();

      fetch(`${API_BASE_URL}/api/leave`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ serviceCode, idNumber })
      })
        .then(response => {
          if (!response.ok) throw new Error("فشل في الاتصال بالخادم");
          return response.json();
        })
        .then(data => {
          if (data.success && data.record) {
            displayLeaveData(data.record);
          } else {
            showError(data.message || 'لا توجد إجازة مطابقة للمعلومات المدخلة');
          }
        })
        .catch(error => {
          console.error('Error:', error);
          showError("تعذر الاتصال بالخدمة. يرجى المحاولة لاحقاً");
        });
    });

    resetBtn.addEventListener("click", resetForm);
    newInquiryBtn.addEventListener("click", resetForm);
    returnFormBtn.addEventListener("click", resetForm);
  </script>
</body>
</html>
